#!/usr/bin/env bash
# Configure redirection
if ! grep -q "/redirect_me" /etc/nginx/sites-enabled/default; then
    sudo sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.koketsodev.tech;\n\t}' /etc/nginx/sites-enabled/default
fi

# Reload Nginx configuration
sudo nginx -s reload